<h2 class="text-center"> 我加入的討論版 </h2>
<table class="table">
  <thead>
    <tr>
      <th> # </th>
      <th> <%= t(:title) %></th>
      <th> <%= t(:description) %> </th>
      <th> <%= t(:post_count) %> </th>
      <th> <%= t(:last_update) %> </th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td> # </td>
        <td> <%= link_to(group.title, group_path(group)) %> </td>
        <td> <%= group.description %> </td>
        <td> <%= group.posts.size %> </td>
        <td> <%= group.updated_at %> </td>
      </tr>
    <% end %>
  </tbody>
</table>