<div class="col-md-4 col-md-offset-4">
    <h1><%= t(:edit) %><%= t(:profile) %></h1>
    <hr/>
    <%= simple_form_for @profile, url: account_profile_edit_path do |f| %>
        <div class="form-group">
            <%= f.input :name, label:t(:name) %>
            <%= f.input :sex, label:t(:sex), collection: ["男","女"], prompt: "Select your sex"%>
            <%= f.input :birth, label:t(:birth), 
                start_year: Date.today.year - 100,
                end_year: Date.today.year, 
                order: [:year, :month, :day] %>
            <%= f.input :phone, label:t(:phone), placeholder: '07-XXXXXXX'%>
            <%= f.input :cellphone, label:t(:cellphone) %>
            <%= f.input :email, placeholder: 'example@gmail.com', label:t(:email) %>
            <%= f.input :address, label:t(:address) %>
            <%= f.input :education, label:t(:education) %>
        </div>
        <%= f.input :terms_of_service, as: :boolean, label: sanitize("我已閱讀並且接受#{link_to('個人資料提供告知暨同意書',account_profile_term_path)}的內容") %>
        <%= f.button :submit, class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
    <% end %>
</div>

