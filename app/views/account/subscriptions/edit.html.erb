<%= render 'breadcrumb' %>
<% content_for :breadcrumb do %>
  > <%= link_to '編輯消息訂閱', edit_account_subscription_path %>
<% end %>
<div class="container">
  <div class="card">
    <div class="card-body">
      <%= simple_form_for @subscription, url: account_subscription_url do |f| %>
        <%= f.input :new_events %>
        <%= f.input :joined_events %>
        <%= f.button :submit, data: { disable_with: '更新中...' } %>
      <% end %>
    </div>
  </div>
</div>
