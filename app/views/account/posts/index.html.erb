<div class="col-md-10 col-md-offset-1">

  <h2 class="text-center"> <%= t(:my_posts) %> </h2>

  <table class="table">
    <thead>
      <tr>
        <th> <%= t(:content) %> </th>
        <th> <%= t(:group_name) %> </th>
        <th> <%= t(:last_update) %> </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= post.content %> </td>
          <td> <%= link_to(post.group.title, group_path(post.group)) %> </td>
          <td> <%= post.updated_at %> </td>
          <td>
            <%= link_to(t(:edit), edit_group_post_path(post.group, post), class: "btn btn-info btn-xs") %>
            <%= link_to(t(:delete), group_post_path(post.group, post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-xs") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>