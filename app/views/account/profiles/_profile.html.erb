<% render_for_admin ||= false %>
<% if profile.blank? %>
  <div class="card">
    <div class="card-body">
      <p class="card-text text-center">
        <%= t '.no_profile' %>
      </p>
    </div>
  </div>
<% else %>
  <div class="card">
    <div class="card-body">
      <h3 class="card-title text-center">
        <%= Profile.model_name.human %>
        <%= link_to(t('.edit'), edit_account_profile_path, class: 'btn btn-primary ml-2') unless render_for_admin %>
      </h3>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item d-flex justify-content-between px-5">
        <div><strong><%= Profile.human_attribute_name :name %></strong></div>
        <div><%= profile.name %></div>
      </li>
      <li class="list-group-item d-flex justify-content-between px-5">
        <div><strong><%= Profile.human_attribute_name :sex %></strong></div>
        <div><%= profile.sex %></div>
      </li>
      <li class="list-group-item d-flex justify-content-between px-5">
        <div><strong><%= Profile.human_attribute_name :birth %></strong></div>
        <div><%= l profile.birth %></div>
      </li>
      <li class="list-group-item d-flex justify-content-between px-5">
        <div><strong><%= Profile.human_attribute_name :id_number %></strong></div>
        <div><%= profile.id_number %></div>
      </li>
      <li class="list-group-item d-flex justify-content-between px-5">
        <div><strong><%= Profile.human_attribute_name :email %></strong></div>
        <div><%= profile.user.email %></div>
      </li>
      <li class="list-group-item d-flex justify-content-between px-5">
        <div><strong><%= Profile.human_attribute_name :phone %></strong></div>
        <div><%= profile.phone %></div>
      </li>
      <li class="list-group-item d-flex justify-content-between px-5">
        <div><strong><%= Profile.human_attribute_name :cellphone %></strong></div>
        <div><%= profile.cellphone %></div>
      </li>
      <li class="list-group-item d-flex justify-content-between px-5">
        <div><strong><%= Profile.human_attribute_name :emergency_contact %></strong></div>
        <div><%= profile.emergency_contact %></div>
      </li>
      <li class="list-group-item d-flex justify-content-between px-5">
        <div><strong><%= Profile.human_attribute_name :address %></strong></div>
        <div><%= profile.address %></div>
      </li>
      <li class="list-group-item d-flex justify-content-between px-5">
        <div><strong><%= Profile.human_attribute_name :education %></strong></div>
        <div><%= profile.education %></div>
      </li>
    </ul>
  </div>
<% end %>
