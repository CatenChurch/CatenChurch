<% set_meta_tags title: GroupReport.model_name.human,
  description: '小組出席報告統計資料',
  og: {
    title: GroupReport.model_name.human,
    description: '小組出席報告統計資料',
    image: 'https://i.imgur.com/Kgv2wwl.jpg'
  } %>
<%= render 'breadcrumb' %>
<div class="d-flex align-items-end flex-column">
  <%= link_to new_group_report_path, class: 'btn btn-outline-primary' do %>
    <i class="fas fa-plus"></i> 填寫小組回報
  <% end if current_user&.group_leader? %>
  <p class="small text-muted">必須是小組長才能填寫小組回報</p>
</div>
<nav>
  <div class="nav nav-tabs" id="week-tab" role="tablist">
    <a class="nav-item nav-link active" id="current-week-tab" data-toggle="tab" href="#current-week-reports">
      <%= Group.human_attribute_name :current_week_report %>
    </a>
    <a class="nav-item nav-link" id="prev-week-tab" data-toggle="tab" href="#prev-week-reports">
      <%= Group.human_attribute_name :prev_week_report %>
    </a>
  </div>
</nav>
<div class="container mt-2">
  <div class="tab-content" id="week-reports">
    <div class="tab-pane fade show active" id="current-week-reports">
      <%= render 'week', groups: @groups %>
    </div>
    <div class="tab-pane fade" id="prev-week-reports">
      <%= render 'week', groups: @groups, prev: true %>
    </div>
  </div>
</div>
