<%= simple_form_for(@contact, url: contacts_path) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :phone %>
  <%= f.input :message, as: :text, input_html: {rows: 8} %>
  <%= f.button :submit, t('.submit'), class: 'btn-block btn-purple' %>
<% end %>
