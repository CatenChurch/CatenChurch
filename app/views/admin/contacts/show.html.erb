<%= link_to fa_icon('list', text: t('.back')), admin_contacts_path, class: 'btn btn-outline-secondary' %>
<h1 class="my-2 text-center"><%= t '.title' %></h1>
<div class="d-flex">
  <% if @contact.handled %>
    <%= link_to fa_icon('times', text: t('.unhandle')), handle_admin_contact_path, method: :post, class: 'btn btn-outline-primary ml-auto' %>
  <% else %>
    <%= link_to fa_icon('check', text: t('.handle')), handle_admin_contact_path, method: :post, class: 'btn btn-outline-primary ml-auto' %>
  <% end %>
  <%= link_to fa_icon('trash', text: t('button.delete')), admin_contact_path, method: :delete, class: 'btn btn-outline-danger ml-1', data: { confirm: t('.confirm') } %>
</div>
<div class="container pt-2">
  <h2><%= Contact.human_attribute_name :name %></h2>
  <p><%= @contact.name %></p>
  <h2><%= Contact.human_attribute_name :phone %></h2>
  <p><%= @contact.phone %></p>
  <h2><%= Contact.human_attribute_name :email %></h2>
  <p><%= mail_to @contact.email %></p>
  <h2><%= Contact.human_attribute_name :message %></h2>
  <p><%= @contact.message %></p>
  <h2><%= Contact.human_attribute_name :created_at %></h2>
  <p><%= l @contact.created_at, format: :to_sec %></p>
  <h2><%= Contact.human_attribute_name :handled %></h2>
  <p><%= Contact.human_attribute_name "handled.#{@contact.handled}" %></p>
</div>
