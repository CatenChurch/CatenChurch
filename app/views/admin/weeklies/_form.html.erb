<%= simple_form_for [:admin, @weekly] do |f| %>
  <%= f.error_notification %>
  <%= f.input :title %>
  <%= f.input :issue %>
  <%= f.input :published_at, as: :string %>
  <% if @weekly.pdf.attached? %>
    <p>
      <%= Weekly.human_attribute_name :pdf %>
      <%= link_to weekly.pdf.filename, rails_blob_path(weekly.pdf) %>
    </p>
  <% end %>
  <%= f.input :pdf, label: '上傳新的 PDF', label_html: { class: 'mr-1' }, input_html: { accept: 'application/pdf,.pdf' } %>
  <%= f.button :submit %>
<% end %>
<%= javascript_pack_tag 'bootstrap-file-upload', 'data-turbolinks-track': 'reload' %>
<%= javascript_pack_tag 'datetime-pickers', 'data-turbolinks-track': 'reload', data: { 'datetime-pickers': [{ selector: '#weekly_published_at' }]} %>
