<h1 class="text-center"><%= t '.title' %></h1>
<div class="mt-2 btn-toolbar">
  <a class="btn btn-outline-secondary" data-toggle="collapse" href="#collapse-search">
    <i class="fas fa-search"></i> <%= t('button.search_conditions') %>
  </a>
  <%= link_to new_admin_service_team_path, class: 'btn btn-outline-success ml-auto', data: { turbolinks: false } do %>
    <i class="fas fa-plus"></i> <%= t '.new' %>
  <% end %>
</div>
<div class="collapse mt-2" id="collapse-search">
  <div class="card">
    <div class="card-body">
      <%= search_form_for @q, url: admin_service_teams_url, class: 'form-inline' do |f| %>
        <div class="input-group">
          <%= f.search_field :name_cont, class: 'form-control', placeholder: Service::Team.human_attribute_name(:name) %>
          <%= f.search_field :leader_profile_name_cont, class: 'form-control', placeholder: Service::Team.human_attribute_name(:leader) %>
          <%= f.search_field :users_profile_name_cont, class: 'form-control', placeholder: Service::Team.human_attribute_name(:members) %>
        </div>
        <div class="w-100 mt-2"></div>
        <%= link_to admin_groups_path, class: 'btn btn-sm btn-outline-secondary ml-auto' do %>
          <i class="fas fa-eraser"></i> <%= t 'button.clear' %>
        <% end %>
        <button type="submit" class="btn btn-sm btn-outline-primary ml-1">
          <i class="fas fa-search"></i> <%= t 'button.search' %>
        </button>
      <% end %>
    </div>
  </div>
</div>
<div class="my-2">
  <%= paginate @teams %>
  <table class="table d-sm-table d-none my-2">
    <thead class="thead-light">
      <tr>
        <th><%= Service::Team.human_attribute_name :name %></th>
        <th><%= Service::Team.human_attribute_name :leader %></th>
        <th><%= Service::Team.human_attribute_name :users_count %></th>
        <th><%= Service::Team.human_attribute_name :schedules_count %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= team.name %></td>
          <td><%= link_to team.leader.profile&.name, admin_member_path(team.leader) %></td>
          <td><%= team.users_count %></td>
          <td><%= team.schedules_count %></td>
          <td class="btn-toolbar">
            <div class="btn-group">
              <%= link_to admin_service_team_path(team), class: 'btn btn-sm btn-outline-secondary' do %>
                <i class="fas fa-info-circle"></i> <%= t 'button.show' %>
              <% end %>
              <%= link_to edit_admin_service_team_path(team), class: 'btn btn-sm btn-outline-secondary', data: { turbolinks: false } do %>
                <i class="fas fa-edit"></i> <%= t 'button.edit' %>
              <% end %>
              <%= link_to admin_service_team_path(team),
                          class: 'btn btn-sm btn-outline-danger',
                          method: :delete,
                          data: { confirm: t('.confirm') } do %>
                <i class="fas fa-trash"></i> <%= t 'button.delete' %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <!-- moblie -->
  <div class="list-group d-sm-none my-2">
    <% @teams.each do |team| %>
      <%= link_to admin_service_team_path(team), class: 'list-group-item list-group-item-action' do %>
        <p><%= Service::Team.human_attribute_name :name %> : <%= team.name %></p>
        <p><%= Service::Team.human_attribute_name :leader %> : <%= link_to team.leader.profile&.name, admin_member_path(team.leader) %></p>
        <p><%= Service::Team.human_attribute_name :users_count %> : <%= team.users_count %></p>
        <p><%= Service::Team.human_attribute_name :schedules_count %> : <%= team.schedules_count %></p>
      <% end %>
    <% end %>
  </div>
  <%= paginate @teams %>
</div>
