<% icon ||= nil; text ||= '' %>
<%= link_to path, class: 'card btn btn-outline-info m-2' do %>
  <div class="card-body text-center">
    <h3 class="card-title">
      <%= content_tag(:i, nil, class: icon) if icon %>
      <br>
      <%= title %>
    </h3>
    <div class="card-text">
      <%= text %>
    </div>
  </div>
<% end %>
