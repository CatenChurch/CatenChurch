<% icon ||= nil; text ||= '' %>
<%= link_to path, class: 'card btn btn-outline-info m-2', style: 'min-width: 150px;' do %>
  <div class="card-body text-center">
    <h3 class="card-title">
      <%= icon if icon %>
      <br>
      <%= title %>
    </h3>
    <div class="card-text">
      <%= text %>
    </div>
  </div>
<% end %>
