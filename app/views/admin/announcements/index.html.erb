<h1 class="text-center"><%= Announcement.model_name.human %>一覽</h1>
<div class="mt-2 btn-toolbar">
  <%= link_to new_admin_announcement_path, class: 'btn btn-outline-success ml-auto' do %>
    <i class="fas fa-plus"></i> 新增<%= Announcement.model_name.human %>
  <% end %>
</div>
<div class="my-2">
  <%= paginate @announcements %>
  <table class="table d-sm-table d-none my-2">
    <thead class="thead-light">
      <tr>
        <th><%= Announcement.human_attribute_name :title %></th>
        <th><%= Announcement.human_attribute_name :description %></th>
        <th><%= Announcement.human_attribute_name :updated_at %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @announcements.each do |announcement| %>
        <tr>
          <td><%= announcement.title %></td>
          <td><%= announcement.description %></td>
          <td><%= l announcement.updated_at %></td>
          <td class="btn-toolbar">
            <div class="btn-group">
              <%= link_to admin_announcement_path(announcement), class: 'btn btn-sm btn-outline-secondary' do %>
                <i class="fas fa-info-circle"></i> 查看
              <% end %>
              <%= link_to edit_admin_announcement_path(announcement), class: 'btn btn-sm btn-outline-secondary' do %>
                <i class="fas fa-edit"></i> 編輯
              <% end %>
              <%= link_to admin_announcement_path(announcement),
                          class: 'btn btn-sm btn-outline-danger',
                          method: :delete,
                          data: { confirm: '確定要刪除這個公告嗎？' } do %>
                <i class="fas fa-trash"></i> 刪除
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <!-- moblie -->
  <div class="list-group d-sm-none my-2">
    <% @announcements.each do |announcement| %>
      <%= link_to admin_announcement_path(announcement), class: 'list-group-item list-group-item-action' do %>
        <p><%= Announcement.human_attribute_name :title %> : <%= announcement.title %></p>
        <p><%= Announcement.human_attribute_name :description %> : <%= announcement.description %></p>
        <p><%= Announcement.human_attribute_name :updated_at %> : <%= l announcement.updated_at %></p>
      <% end %>
    <% end %>
  </div>
  <%= paginate @announcements %>
</div>
