<%= simple_form_for([:admin, @announcement]) do |f| %>
  <%= f.error_notification %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :content, as: :pagedown, input_html: { preview: false, rows: 20 } %>
  <%= button_tag class: 'btn btn-primary', data: { disable_with: t('button.submitting') } do %>
    <%= fa_icon('floppy-o', text: t('button.submit')) %>
  <% end %>
<% end %>
