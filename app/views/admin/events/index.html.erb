<h2>活動一覽<%= link_to(t(:new_event), new_admin_event_path, class: "btn btn-primary ml-2") %></h2>
<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th><%= t(:title) %></th>
      <th><%= t(:nature) %></th>
      <th><%= t(:updated_at) %></th>
      <th>詳細資訊</th>
    </tr>
  </thead>
  <tbody>
    <tr class="table-success">
      <th colspan="4" class="text-center">當前的活動</th>
    </tr>
    <% @events.each do |event| %>
    <tr>
      <td><%= event.name %></td>
      <td><%= event.nature %></td>
      <td><%= event.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
      <td><%= link_to "查看", admin_event_path(event), class: "btn btn-info" %></td>
    </tr>
    <% end %>
    <tr class="table-warning">
      <th colspan="4" class="text-center">過期的活動</th>
    </tr>
    <% @expired_events.each do |event| %>
    <tr>
      <td><%= event.name %></td>
      <td><%= event.nature %></td>
      <td><%= event.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
      <td><%= link_to "查看", admin_event_path(event), class: "btn btn-info" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
