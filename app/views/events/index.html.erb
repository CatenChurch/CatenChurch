<% content_for :breadcrumb do %>
<%= link_to t('pages.root'), root_path %>
>
<%= link_to t('pages.events'), events_path %>
<% end %>

<% content_for :jumbotron do %>
<h1 class="display-4 text-center"><%= t('pages.events') %></h1>
<p class="lead text-center">點選活動以報名與查看詳情。</p>
<div class="d-flex">
  <%= link_to "我報名的活動", account_events_path, class: "btn btn-outline-secondary ml-auto"%>
</div>
<% end %>
<div class="container">

  <h2>
    當前的活動<span class="badge badge-primary ml-2">New</span>
  </h2>
  <div class="row">
    <% @events.each do |event| %>
    <div class="col-12 col-md-4 col-lg-3 py-1">
      <%= link_to event_path(event), class: "card-link event-card" do %>
      <div class="card h-100 pb-1">
        <div class="card-block">
          <h3 class="card-title"><%= event.name %></h3>
          <p class="card-text"><%= truncate(event.description, length: 90) %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= t('event.participants_count') %>:<%= event.show_participants_count %></li>
        </ul>
        <div class="card-footer">
          <small class="text-muted">截止時間:<%= event.sign_up_end.strftime("%Y/%m/%d %H:%M") %></small>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>

  <hr>

  <h2>過期的活動</h2>
  <%= paginate @expired_events %>
  <div class="row">
    <% @expired_events.each do |event| %>
    <div class="col-12 col-md-4 col-lg-3 py-1">
      <%= link_to event_path(event), class: "card-link event-card" do %>
      <div class="card h-100 pb-1">
        <div class="card-block">
          <h3 class="card-title"><%= event.name %></h3>
          <p class="card-text"><%= truncate(event.description, length: 90) %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= t('event.participants_count') %>:<%= event.show_participants_count %></li>
        </ul>
        <div class="card-footer">
          <small class="text-muted">截止時間:<%= event.sign_up_end.strftime("%Y/%m/%d %H:%M") %></small>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>

</div>
