<div class="btn-group pull-right">
	<%= link_to("New event", new_event_path, class: "btn btn-primary") %>
</div>
<table class="table table-hover">
	<thead>
		<tr>
			<td>#</td>
			<td>活動名稱</td>
			<td>報名時間</td>
			<td>活動時間</td>
			<td>報名人數</td>
		</tr>
	</thead>
	<tbody>
		<% i=0 %>
		<% @events.each do |event| %>
		<tr>
			<td> <%= i+=1 %> </td>
			<td> <%= link_to(event.name, event_path(event)) %> </td>
			<td> <%= event.sign_up_begin.to_s(:Ymd_HM) + " - " +event.sign_up_end.to_s(:Ymd_HM) %> </td>
			<td> <%= event.start.to_s(:Ymd_HM) + " - " +event.over.to_s(:Ymd_HM) %> </td>
			<td> 
				<%= event.participants_count %> 
				/ 
				<%= event.max_sign_up_number %>
			</td>
			<td>
				<% if event.editable_by?(current_user) %>
					<%= link_to("Edit", edit_event_path(event), class: "btn btn-sm btn-primary")%>
					<%= link_to("Delete", event_path(event),    class: "btn btn-sm btn-danger",
					method: :delete, data: { confirm: "Are you sure?" } )%>
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

