<%= link_to "回前頁", events_path, class: "btn btn-default"%>
<% if current_user.present? %>
	<% if current_user.is_participant_of_event?(@event) %>
		<%= link_to( t(:quit_event), quit_event_path(@event), method: :post, class: "btn btn-warning") %>
		<%= link_to t(:event_participants_list), show_list_event_path(@event), class: "btn btn-info" %>
	<% else %>
		<%= link_to("報名活動", join_event_path(@event), method: :post, class: "btn btn-success") %>
	<% end %>
<% end %>
<%= render 'event_table', :e => @event %>
