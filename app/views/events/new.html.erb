<div class="col-md-4 col-md-offset-4">
	<h1>新增活動</h1>
	<hr>
	<%= simple_form_for @event do |f| %>
	<div class="form-group">
		<%= f.input :name %>
		<%= f.input :nature %>
		<%= f.input :description %>
		<%= f.input :max_sign_up_number %>
		<%= f.input :min_sign_up_number %>
		<%= f.input :sign_up_begin %>
		<%= f.input :sign_up_end %>
		<%= f.input :start %>
		<%= f.input :over %>
	</div>
	<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
	<% end %>
</div>