<% backstage ||= false %>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th><%= t '.name' %></th>
      <th><%= t '.sex' %></th>
      <% if backstage %>
        <th><%= t '.birth' %></th>
        <th><%= t '.id_number' %></th>
        <th><%= t '.email' %></th>
        <th><%= t '.phone' %></th>
        <th><%= t '.emergency_contact' %></th>
        <th><%= t '.paid' %></th>
        <th><%= t '.arrival' %></th>
        <th><%= t '.remark' %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% event_users.each do |event_user| %>
      <% user = event_user.user
    profile = (user.profile.blank? ? Profile.new : user.profile) %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.sex %></td>
        <% if backstage %>
          <td><%= l profile.birth %></td>
          <td><%= profile.id_number %></td>
          <td><%= user.email %></td>
          <td><%= profile.phone %><br><%= profile.cellphone %></td>
          <td><%= profile.emergency_contact %></td>
          <td><%= paid(event_user.paid) %></td>
          <td><%= arrival(event_user.arrival) %></td>
          <td><%= event_user.remark %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
