<div id="youtube" class="col-md-8 col-md-offset-2 ">
  <a class="text-center" :href="channel.url"><h1>{{ channel.title }}</h1></a>

  <div style="height: 45px;">
    <div class="btn btn-default" v-show="currentVideo!=0" @click="currentVideo--">Prev</div>
    <div class="btn btn-default pull-right" v-show="currentVideo!=src.items.length-2" @click="currentVideo++">Next</div>
  </div>
  
  <div v-for="(index, item) in src.items | orderBy item.snippet.publishedAt 1" v-show="index==currentVideo"  class="embed-responsive embed-responsive-16by9 youtube_video">
    <iframe v-if="item.id.kind=='youtube#video'" :src="'https://www.youtube.com/embed/'+item.id.videoId" class="embed-responsive-item" frameborder="0"; allowfullscreen></iframe>
  </div>


</div>

<script type="text/javascript">
var yt = new Vue({
  el: '#youtube',
  data: {
    src : <%= sanitize @res%>,
    channel : {
      title : '',
      url : "https://www.youtube.com/channel/<%= @channel_id%>"
    },
    currentVideo : 0
  },
  created: function() {
    this.channel.title = this.src.items[0].snippet.channelTitle;
  }
});
</script>