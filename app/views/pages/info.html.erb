<%
title t('pages.info')
seo_description = "教會資訊，聚會時間地點與聯絡方式。"
description seo_description
set_meta_tags og: {
  title: "#{t(:website)} | #{t('pages.info')}}",
  image: "http://i.imgur.com/Kgv2wwl.jpg",
  description: seo_description
}
%>
<div class="jumbotron jumbotron-color">
  <div class="container-fluid">
    <h1 class="display-3">教會資訊</h1>
    <p class="lead my-4">聚會時間地點與聯絡方式。</p>
  </div>
</div>
<div class="container">
  <div class="card">
    <div class="card-header">
      <ul class="nav nav-tabs card-header-tabs" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" data-toggle="tab" role="tab" href="#times">聚會時間</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" role="tab" href="#contact">聯絡方式</a>
        </li>
      </ul>
    </div>
    <div class="card-block tab-content">
      <div class="tab-pane active" id="times" role="tabpanel">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <h4>主日崇拜</h4>
            <span class="ml-auto">每週日 09:50 至 11:30</span>
          </li>
          <li class="list-group-item">
            <h4>青少年團契</h4>
            <span class="ml-auto">每週六 19:00 至 21:00</span>
          </li>
        </ul>
      </div>
      <div class="tab-pane" id="contact" role="tabpanel">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <h4>網站</h4>
            <%= link_to root_url, root_path, class: "ml-auto" %></li>
          <li class="list-group-item">
            <h4>Facebook</h4>
            <a class="ml-auto" href="<%= t('my_contact.facebook') %>"><%= t('my_contact.facebook') %></a>
          </li>
          <li class="list-group-item">
            <h4>Youtube頻道</h4>
            <a class="ml-auto" href="<%= t('my_contact.youtube') %>"><%= t('my_contact.youtube') %></a>
          </li>
          <li class="list-group-item">
            <h4>Line @</h4>
            <a class="ml-auto" href="<%= t('my_contact.line@') %>"><%= t('my_contact.line@') %></a>
          </li>
          <li class="list-group-item">
            <h4>地址</h4>
            <span class="ml-auto"><%= t('my_contact.address') %></span>
          </li>
          <li class="list-group-item">
            <h4>電話</h4>
            <span class="ml-auto"><%= t('my_contact.tel') %></span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
