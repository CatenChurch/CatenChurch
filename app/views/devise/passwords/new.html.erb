<% content_for :breadcrumb do %>
  <%= link_to t('pages.root'), root_path %>
  >
  <%= t('pages.reset_password') %>
<% end %>
<% content_for :jumbotron do %>
  <h1 class="display-4 text-center"><%= t('pages.reset_password') %></h1>
  <p class="lead text-center">輸入當初註冊的Email，系統將會寄送重設密碼的鏈結至你的Email</p>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-12 col-sm-6">
      <div class="card h-100">
        <div class="card-block">
          <%= render 'devise/shared/links' %>
        </div>
      </div>
    </div>
    <div class="col-12 col-sm-6">
      <div class="card h-100">
        <div class="card-block">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, t('pages.reset_password'), class: 'btn btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
