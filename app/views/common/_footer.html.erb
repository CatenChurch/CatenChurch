<footer class="footer bg-light p-1 pt-2">
  <div class="container text-center">
    <div class="d-flex flex-wrap align-items-center justify-content-between ">
      <h5><%= link_to t('pages.about'), about_path, class: "caten-link" %></h5>
      <h5><%= link_to t('pages.contact'), contact_path, class: "caten-link" %></h5>
      <h5><%= link_to t('pages.term'), term_path, class: "caten-link" %></h5>
      <div class="w-100 d-sm-none"></div>
      <%= link_to "https://#{t('my_contact.facebook')}", class: "caten-link" do %>
      <%= fa_stacked_icon "facebook", base: "circle-thin", class: "fa-2x" %>
      <% end %>
      <%= link_to "https://#{t('my_contact.youtube')}", class: "caten-link" do %>
      <%= fa_stacked_icon "youtube", base: "circle-thin", class: "fa-2x" %>
      <% end %>
      <%= link_to "https://#{t('my_contact.github')}", class: "caten-link" do %>
      <%= fa_stacked_icon "github", base: "circle-thin", class: "fa-2x" %>
      <% end %>
    </div>
    <div class="d-flex flex-wrap align-items-baseline justify-content-around">
      <div class="pt-4">
        <div class="text-muted"><%= t('my_contact.worship_time') %></div>
        <div class="text-muted"><%= t('my_contact.office_hour') %></div>
      </div>
      <div class="pt-4">
        <div class="lead purple"><%= t('my_contact.tel') %></div>
        <%= mail_to t('my_contact.email'), t('my_contact.email'), class: "caten-link" %>
        <div><%= t('my_contact.address') %></div>
      </div>
    </div>
    <div class="mt-4">
      <div class="mx-auto">
