
<% if current_user.present? %>
	<div>
		<div class="btn-group pull-right">
			<!--不是作者就不顯示編輯-->
			<%= link_to(t(:edit), edit_group_path(@group), class: "btn btn-default") if current_user.is_manager? %>
			
			<%= link_to(t(:new_post), new_group_post_path(@group), class: "btn btn-primary") if current_user.is_member_of_group?(@group) %>
		</div>
		
			<% if current_user.is_member_of_group?(@group) %>
				<%= link_to(t(:quit_group), quit_group_path(@group), method: :post, class: "btn btn-warning") %>
			<% else %>
				<%= link_to(t(:join_group), join_group_path(@group), method: :post, class: "btn btn-info") %>
			<% end %>
	</div>
<% end %>
<div class="col-md-10 col-md-offset-1">
	<h2><%= @group.title %></h2>
	<p><%= @group.description %></p>

	<table class="table">
		<thead>
			<tr>
				<th><%= t(:posts) %></th>
				<th colspan="2"></th>
			</tr>
		</thead>
		<tbody>
			<% @posts.each do |post| %>
			<tr>
				<td><%= post.content %></td>
				<td>
					<% if post.editable_by?(current_user) %>
					<%= link_to(t(:edit), edit_group_post_path(post.group, post),
					class: "btn btn-default btn-xs")%>
					<%= link_to(t(:delete), group_post_path(post.group, post), class: "btn btn-default btn-xs ", method: :delete, data: { confirm: "Are you sure?" } )%>
					<% end %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
