{
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": ["prettier", "html", "html-erb"],
  "extends": ["eslint:recommended", "airbnb-base", "plugin:prettier/recommended", "plugin:vue/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error"
  }
}
